@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-5" style="min-height: calc(100vh - 100px);">
    @* Removed mainBg from here. The mainBg from _Layout.cshtml or site.css will apply to the body/main wrapper. *@
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 text-center">
                @* Adjusted column width for better spacing *@
                <h1 class="text-40 fw-bold text-yellow mb-4">Admin Dashboard</h1> @* Using your existing classes *@
                <p class="text-22 fw-medium textMain mb-5">
                    @* Using your existing classes *@
                    Welcome, Administrator! Here you can manage users, roles, content, and application settings.
                </p>

                <div class="row g-4">
                    @* Bootstrap's gutter utility for spacing *@
                    <div class="col-md-6">
                        <div class="card p-4 shadow-sm bg-white rounded-3 h-100 d-flex flex-column justify-content-between">
                            @* Added h-100, d-flex, flex-column, justify-content-between for consistent card height and content alignment *@
                            <div class="card-body text-center">
                                @* Centered card content *@
                                <i class="bi bi-people-fill text-60 textLightPurple mb-3"></i> @* Bootstrap Icon with custom size/color *@
                                <h3 class="text-28 fw-bold text-dark mb-2">User Management</h3> @* Using text-dark for headings *@
                                <p class="text-18 text-secondary mb-3">View, create, edit, or delete user accounts and assign roles.</p> @* Using text-secondary for body text *@
                            </div>
                            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-center">
                                @* Centered button in footer *@
                                <a href="#" class="btn btn-warning rounded-pill fw-bold py-2 w-75 textLightPurple">Manage Users</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card p-4 shadow-sm bg-white rounded-3 h-100 d-flex flex-column justify-content-between">
                            <div class="card-body text-center">
                                <i class="bi bi-book-fill text-60 textLightPurple mb-3"></i> @* Bootstrap Icon *@
                                <h3 class="text-28 fw-bold text-dark mb-2">Content Management</h3>
                                <p class="text-18 text-secondary mb-3">Oversee courses, categories, articles, and other site content.</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-center">
                                <a href="#" class="btn btn-warning rounded-pill fw-bold py-2 w-75 textLightPurple">Manage Content</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card p-4 shadow-sm bg-white rounded-3 h-100 d-flex flex-column justify-content-between">
                            <div class="card-body text-center">
                                <i class="bi bi-gear-fill text-60 textLightPurple mb-3"></i> @* Bootstrap Icon *@
                                <h3 class="text-28 fw-bold text-dark mb-2">Settings & Configuration</h3>
                                <p class="text-18 text-secondary mb-3">Adjust application-wide settings and configurations.</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-center">
                                <a href="#" class="btn btn-warning rounded-pill fw-bold py-2 w-75 textLightPurple">Site Settings</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card p-4 shadow-sm bg-white rounded-3 h-100 d-flex flex-column justify-content-between">
                            <div class="card-body text-center">
                                <i class="bi bi-graph-up text-60 textLightPurple mb-3"></i> @* Bootstrap Icon *@
                                <h3 class="text-28 fw-bold text-dark mb-2">Analytics & Reports</h3>
                                <p class="text-18 text-secondary mb-3">View site performance, user activity, and other important metrics.</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-center">
                                <a href="#" class="btn btn-warning rounded-pill fw-bold py-2 w-75 textLightPurple">View Reports</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>








