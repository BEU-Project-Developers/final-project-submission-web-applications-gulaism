@using KodlaWebApp.ViewModels
@model KodlaWebApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-fluid py-5 mainBg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h2 class="text-40 fw-bold text-yellow mb-3">Welcome Back!</h2>
                <p class="text-22 fw-medium textMain mb-4">Log in to continue your learning journey with our community.</p>

                <div class="mb-3">
                    <button class="btn btn-light rounded-pill fw-bold w-50 py-2 me-2"><i class="bi bi-google me-2"></i> Continue with Google</button>
                </div>

                <form asp-action="SignIn" method="post">
                    <div class="mb-3">
                        <input asp-for="Email" type="email" class="form-control rounded-pill py-3" placeholder="Email Address">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 position-relative">
                        <input asp-for="Password" type="password" class="form-control rounded-pill py-3" placeholder="Password">
                        <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;"></i>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-check text-start mb-3">
                        <input asp-formaction="RememberMe" type="checkbox" class="form-check-input rounded" id="rememberMe"/>
                        <label class="form-check-label textMain text-16 fw-medium" for="rememberMe">Remember Me</label>
                    </div>

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3 text-start">
                        <a asp-controller="Account" asp-action="ForgetPas" class="text-yellow text-16 fw-medium">Forgot Your Password?</a>
                    </div>
                    <button type="submit" class="btn btn-warning rounded-pill fw-bold py-3 w-100 textLightPurple">Sign In</button>
                </form>

                <p class="mt-4 textMain text-16 fw-medium">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-yellow">Sign Up</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-light {
        background-color: #f8f9fa !important;
        color: #212529 !important;
    }

    .btn-primary {
        background-color: #0d6efd !important;
        color: #fff !important;
    }

    .btn-warning {
        background-color: #ffc107 !important;
        color: #5947ab !important;
    }
</style>
