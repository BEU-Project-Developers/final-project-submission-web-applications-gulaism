@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <h1 class="display-4 text-center mb-4 fw-bold">Course Categories</h1>
    <p class="lead text-center text-muted mb-5">
        Explore our wide range of course categories designed to help you master new skills.
    </p>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Programming</h5>
                    <p class="card-text">
                        Learn modern programming languages and frameworks to build robust applications.
                    </p>
                    <button class="mainBg textMain btn-sm">Explore</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Design</h5>
                    <p class="card-text">
                        Discover courses in graphic, web, and UI/UX design to spark your creativity.
                    </p>
                    <button class="mainBg textMain btn-sm">Explore</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Marketing</h5>
                    <p class="card-text">
                        Enhance your skills in digital marketing, SEO, and content strategy.
                    </p>
                    <button class="mainBg textMain btn-sm">Explore</button>
                </div>
            </div>
        </div>
    </div>
</div>
