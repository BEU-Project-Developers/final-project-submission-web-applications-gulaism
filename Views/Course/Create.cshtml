@using KodlaWebApp.Models
@model KodlaWebApp.Models.Course

@{
    ViewData["Title"] = "Create New Course";
}

<div class="container-fluid py-5 mainBg" style="min-height: calc(100vh - 100px);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-40 fw-bold text-yellow mb-4 text-center">Create New Course</h1>
                <div class="card p-4 shadow-sm bg-white rounded-3">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label textMain fw-medium">Course Title</label>
                            <input asp-for="Title" class="form-control rounded-pill py-3" placeholder="Enter course title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label textMain fw-medium">Description</label>
                            <textarea asp-for="Description" class="form-control rounded-3 py-3" rows="5" placeholder="Enter course description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label textMain fw-medium">Category</label>
                            <select asp-for="CategoryId" class="form-select rounded-pill py-3" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning rounded-pill fw-bold py-3 textLightPurple">Create Course</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-bold py-3">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

