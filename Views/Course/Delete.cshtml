@using KodlaWebApp.Models
@model KodlaWebApp.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container-fluid py-5 mainBg" style="min-height: calc(100vh - 100px);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-40 fw-bold text-danger mb-4 text-center">Delete Course</h1>
                <p class="text-22 fw-medium textMain mb-4 text-center">Are you sure you want to delete this course?</p>

                <div class="card p-4 shadow-sm bg-white rounded-3">
                    <h5 class="card-title text-28 fw-bold text-dark mb-3">@Model.Title</h5>
                    <p class="card-text text-18 textMain mb-2"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text text-16 textGray"><strong>Category:</strong> @Model.Category?.Name</p>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger rounded-pill fw-bold py-3">Confirm Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-bold py-3">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

